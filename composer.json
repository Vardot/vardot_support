{
    "name": "drupal/vardot_support",
    "description": "Metapackage for Vardot Supported Drupal sites.",
    "type": "drupal-module",
    "autoload": {
        "psr-4": {
            "Drupal\\VardotSupport\\": "src/"
        },
        "files": ["settings/autoload.php"]
    },
    "authors": [
        {
            "name": "Jon Pugh",
            "email": "j.pugh@vardot.com"
        }
    ],
    "homepage": "https://drupal.org/project/vardot_support",
    "support": {
        "issues": "https://drupal.org/project/issues/vardot_support",
        "source": "https://git.drupalcode.org/project/vardot_support"
    },
    "bin": [
        "scripts/git-rm-ignored",
        "scripts/set-permissions"
    ],
    "extra": {
         "composer-changelogs": {
             "commit-auto": "ask",
             "commit-bin-file": "vendor/pyrech/composer-changelogs/bin/git-commit.sh",
             "commit-message": "This is just an example. Include this extra config in your project to use this feature."
         },
        "drupal-core-project-message": {
            "include-keys": [
                "name",
                "description",
                "homepage",
                "support"
            ]
        },
        "drupal-scaffold": {
            "[web-root]/sites/default/settings.devshop.php": "settings/settings.devshop.php",
            "[web-root]/sites/default/settings.php": {
                "mode": "append",
                "append": "settings/scaffold-settings-include"
            }
        },
        "patches": {
            "drupal/flysystem": {
                 "Issue #3354667: SFTP Support": "https://git.drupalcode.org/project/flysystem/-/merge_requests/6.patch"
            }
        }
    },
    "minimum-stability": "dev",
    "repositories": {
        "drupal": {
              "type": "composer",
              "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "drupal/raven": "^4.0@dev",
        "drupal/site_audit": "^4.0@dev",
        "drupal/seckit": "^2.0@dev",
        "drupal/security_review": "^2.0@dev",
        "drupal/admin_toolbar": "^3.0@dev",
        "drupal/flood_control": "^2.3@dev",
        "pyrech/composer-changelogs": "dev-main",
        "drush/drush": "^11",
        "drupal/stage_file_proxy": "^2.0",
        "drupal/backup_migrate": "^5.1@dev",
        "drupal/backup_migrate_flysystem": "^5.0@dev"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "pyrech/composer-changelogs": true
        }
    }
}
